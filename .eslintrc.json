{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": [0, "single", {"avoidEscape": true}],
    "semi": ["error", "never"],
    "prefer-template": 0,
    "no-var": 2,
    "prefer-const": 2
  },
  "overrides": [
    {
      "files": "test/**",
      "env": {
        "mocha": true
      }
    }
  ]
}
